<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include layout="@layout/activity_common_listview"
        />
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/common_margin" 
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_dark"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_weight="1"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_mycart_totalcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_weight="2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_content_normal"
                    />

                <TextView 
                    android:id="@+id/tv_mycart_oldprice"
                    style="@style/RedText" 
                    android:layout_weight="3"
                    />

                <Button
                    android:id="@+id/btn_mycart_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="确认结算"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_weight="1"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:textColor="@android:color/white"
                    android:text="支付总计："/>

                <TextView 
                    android:id="@+id/tv_mycart_totalprice"
                    android:textSize="@dimen/textsize_content_normal"
                    style="@style/RedText" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
