<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white"
    >
    <include layout = "@layout/merge_jacktitle"
        />

    <EditText 
        android:id="@+id/et_cuser_pwd"
        style="@style/EditText_Transparent"
        android:inputType="textPassword"
        android:hint="请设置登录密码"
        />
    
    <View 
        style="@style/DividerWH"
        android:layout_marginLeft="@dimen/h_margin_activity"
        />
    <EditText 
        android:id="@+id/et_cuser_name"
        style="@style/EditText_Transparent"
        android:hint="请设置您的名称"
        />
    
    <View 
        style="@style/DividerWH"
        android:layout_marginLeft="@dimen/h_margin_activity"
        />
    
