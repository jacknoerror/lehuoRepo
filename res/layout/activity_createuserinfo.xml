    <include layout="@layout/merge_place"/>"
     <View 
        style="@style/DividerWH"
        android:layout_marginLeft="@dimen/h_margin_activity"
        />
     <EditText 
        android:id="@+id/et_cuser_address"
        style="@style/EditText_Transparent"
        android:hint="收获详细地址"
        />
    
    <View 
        style="@style/DividerWH"
        android:layout_marginLeft="@dimen/h_margin_activity"
        />
    <RadioGroup 
        android:id="@+id/radiogroup_createuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_btn_bg_green_stroke"
        android:layout_margin="@dimen/common_margin"
        >
        <RadioButton 
            android:id="@+id/radio_man"
            android:text="男"
            style="@style/RadioButton_category"
            />
        <RadioButton 
            android:id="@+id/radio_woman"
            android:text="女"
            style="@style/RadioButton_category"
            />
    </RadioGroup>
    <View 
        style="@style/DividerWH"
        android:layout_marginLeft="@dimen/h_margin_activity"
        />
