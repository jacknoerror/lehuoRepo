<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white"
    >
    <include layout = "@layout/merge_jacktitle"
        />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="@dimen/h_margin_activity"
	    android:background="@drawable/shape_btn_bg_green_stroke"
	    android:paddingTop="@dimen/common_margin"
	    android:paddingBottom="@dimen/common_margin"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="手机号码"
	        android:textColor="@android:color/black"
	        android:padding="@dimen/common_margin"
	        />
	    <View 
	        android:layout_width="0.5dp"
	        android:layout_height="match_parent"
	        android:background="@color/green_title"
	        android:layout_marginTop="-5dp"
	        android:layout_marginBottom="-5dp"
	        />
	    <EditText 
	        android:id="@+id/et_registphone_phone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:layout_gravity="center"
	        android:hint="请输入手机号"
	        android:paddingLeft="@dimen/common_margin_bigger"
	        android:background="@android:color/transparent"
	        android:inputType="phone"
	        android:maxLength="11"
	        android:minEms="5"
	        />
	</LinearLayout>
	<Button 
	    android:id="@+id/btn_registphone_getcheck"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="@dimen/h_margin_activity"
	    android:text="获取验证码"
	    />
</LinearLayout>
