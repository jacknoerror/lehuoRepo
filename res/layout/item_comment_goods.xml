<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingTop="@dimen/common_margin_bigger"
    android:paddingBottom="@dimen/common_margin_bigger"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/tv_item_commentgoods_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />
        <LinearLayout 
            android:id="@+id/layout_item_commentgoods_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/common_margin_bigger"
            ></LinearLayout>
    </LinearLayout>
	<TextView 
	    android:id="@+id/tv_item_commentgoods_comment"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/common_margin"
	    android:textColor="@color/grey_text"
	    />
	<TextView 
	    android:id="@+id/tv_item_commentgoods_date"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    />
</LinearLayout>
