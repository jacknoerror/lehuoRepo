<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white"
    >

    <View style="@style/DividerWH" />

    <LinearLayout
        style="@style/MatchWidthOnly"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin" >

        <LinearLayout
            style="@style/WrapAll"
            android:layout_weight="4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_item_courier_name"
                style="@style/WrapAll"
                android:textSize="@dimen/textsize_title_normal"
                android:text="收货人：" />

            <TextView
                android:id="@+id/tv_item_courier_addr"
                style="@style/WrapAll"
                android:text="地址：" 
                android:textSize="@dimen/textsize_content_normal"
                />

            <TextView
                android:id="@+id/tv_item_courier_time"
                style="@style/WrapAll"
                android:textSize="@dimen/textsize_content_normal"
                android:text="最佳送货时间：" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" 
            >

            <!-- 风格设置下 -->

            <TextView
                android:id="@+id/tv_item_courier_phone"
                style="@style/MatchWidthOnly"
                android:layout_weight="1"
                android:gravity="center"
                android:text="15858581313" 
                android:layout_marginBottom="@dimen/common_margin"
                />

            <TextView
                android:id="@+id/tv_item_courier_status1"
                style="@style/MatchWidthOnly"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_arrive"
                android:gravity="center"
                android:textSize="@dimen/textsize_content_normal"
                android:textColor="@android:color/white" 
                android:text="状态"
                />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/DividerShortLeft" />

    <LinearLayout
        android:id="@+id/layout_item_courier_mid"
        style="@style/MatchWidthOnly"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWidthOnly"
        android:padding="@dimen/common_margin"
        android:orientation="horizontal" 
        >

        <LinearLayout
            style="@style/WrapAll"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                style="@style/WrapAll"
                android:text="订单号：" 
                android:textSize="@dimen/textsize_content_normal"
                />

            <TextView
                android:id="@+id/tv_item_courier_sn"
                style="@style/WrapAll"
                android:text="sn" 
                android:textSize="@dimen/textsize_content_normal"
                />

            <TextView
                style="@style/WrapAll"
                android:text="付款方式：" 
                android:textSize="@dimen/textsize_content_normal"
                />

            <TextView
                android:id="@+id/tv_item_courier_payment"
                style="@style/WrapAll"
                android:text="方式"
                android:textColor="@color/red_text" 
                android:textSize="@dimen/textsize_content_normal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/WrapAll"
                    android:text="总 价：" 
                    android:textSize="@dimen/textsize_content_normal"
                    />

                <TextView
                    android:id="@+id/tv_item_courier_price"
                    style="@style/MatchWidthOnly"
                    android:gravity="right"
                    android:text="$9876.00元"
                    android:textColor="@color/red_text" 
                    android:textSize="@dimen/textsize_content_normal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/WrapAll"
                    android:text="数 量：" 
                    android:textSize="@dimen/textsize_content_normal"
                    />

                <TextView
                    android:id="@+id/tv_item_courier_count"
                    style="@style/MatchWidthOnly"
                    android:gravity="right"
                    android:text="－10" 
                    android:textSize="@dimen/textsize_content_normal"
                    />
            </LinearLayout>

            <TextView
                style="@style/WrapAll"
                android:text="订单状态：" 
                android:textSize="@dimen/textsize_content_normal"
                />

            <TextView
                android:id="@+id/tv_item_courier_status2"
                style="@style/WrapAll"
                android:text="状态2"
                android:textColor="@color/red_text" 
                android:textSize="@dimen/textsize_content_normal"
                />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/DividerWH" />

</LinearLayout>