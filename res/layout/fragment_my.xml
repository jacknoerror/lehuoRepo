<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white"
    >
    <include layout="@layout/merge_jacktitle"/> 
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="150dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:background="@color/transparent_light"
	    >
	    <ImageView 
	        android:id="@+id/img_account_userhead"
	        android:layout_width="@dimen/side_goodsicon"
	        android:layout_height="@dimen/side_goodsicon"
	        android:layout_marginLeft="@dimen/h_margin_activity"
	        android:src="@drawable/ic_launcher"
	        />
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="@dimen/side_goodsicon"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_vertical"
	        android:padding="@dimen/common_margin_bigger"
	        >
	        <TextView 
	            android:id="@+id/tv_account1_username"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:textSize="@dimen/textsize_title_sub"
	            android:gravity="center_vertical"
	            android:text="1"
	            android:layout_weight="1"
	            />
	        
	        <TextView 
	            android:id="@+id/tv_account1_phone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:textSize="@dimen/textsize_title_normal"
	            android:gravity="center_vertical"
	            android:text="3"
	            android:layout_weight="1"
	            />
	        <TextView 
	            android:id="@+id/tv_account1_score"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:textSize="@dimen/textsize_title_normal"
	            android:gravity="center_vertical"
	            android:text="2"
	            android:layout_weight="1"
	            />
	    </LinearLayout>
	</LinearLayout>
	<View 
        style="@style/DividerWH"
        android:background="#a111"
        />
    <TextView 
        android:id="@+id/tv_account2_address"
        android:text="地址管理"
        style="@style/ClickBar"
        />
    <View 
        style="@style/DividerShortLeft"
        android:background="#a111"
        />
    <TextView 
        android:id="@+id/tv_account2_birthday"
        style="@style/ClickBar"
        android:text="我的生日"
        />
    <View 
        style="@style/DividerShortLeft"
        android:background="#a111"
        />
    <TextView 
        android:id="@+id/tv_account2_coupon"
        style="@style/ClickBar"
        android:text="我的优惠券"
        />
    <View 
        style="@style/DividerWH"
        android:background="#a111"
        />
    <Button 
        android:id="@+id/btn_logout"
        style="@style/BtnRed"
        android:text="退出当前账户"
        />
</LinearLayout>
