<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/side_goodsicon"
    android:orientation="horizontal" 
    android:padding="@dimen/common_margin"
    >
    <ImageView 
        android:id="@+id/img_sprod_icon"
        style="@style/Img_inItem"
        android:layout_width="@dimen/side_goodsicon_smaller"
        android:layout_height="@dimen/side_goodsicon_smaller"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/tv_item_pname"
            style="@style/MatchWidthOnly"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_title_normal"
            />
        <TextView 
            android:id="@+id/tv_item_pdesc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:lines="3"
            android:ellipsize="end"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/textsize_itemcontent"
            android:layout_weight="1"
            />
        <LinearLayout 
            style="@style/MatchWidthOnly"
            android:orientation="horizontal"
            >
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:layout_weight="10"
                >
                <TextView 
                    android:id="@+id/tv_item_sprod_priceold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    />
                <TextView 
                    android:id="@+id/tv_item_sprod_pricenew"
                    style="@style/RedText"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <Button 
                android:id="@+id/btn_pl_buynow"
                style="@style/BtnOrange"
                android:focusable="false"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
