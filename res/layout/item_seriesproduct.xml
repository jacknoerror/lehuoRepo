<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="@dimen/common_margin"
    >
    <ImageView 
        android:id="@+id/img_sprod_icon"
        style="@style/Img_inItem"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/tv_item_pname"
            style="@style/MatchWidthOnly"
            android:singleLine="true"
            />
        <TextView 
            android:id="@+id/tv_item_pdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            />
        <RelativeLayout 
            style="@style/MatchWidthOnly"
            >
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                >
                <TextView 
                    android:id="@+id/tv_item_sprod_priceold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    />
                <TextView 
                    android:id="@+id/tv_item_sprod_pricenew"
                    style="@style/RedText"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <Button 
                android:id="@+id/btn_buynow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="立刻购买"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
